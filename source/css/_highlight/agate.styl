pre {
  display: block;
  overflow-x: auto;
  padding 10px content-padding;
  background: #333;
  color: white;
}

pre .name,
pre .strong {
  font-weight: bold;
}

pre .code,
pre .emphasis {
  font-style: italic;
}

pre .tag {
  color: #62c8f3;
}

pre .variable,
pre .template-variable,
pre .selector-id,
pre .selector-class {
  color: #ade5fc;
}

pre .string,
pre .bullet {
  color: #a2fca2;
}

pre .type,
pre .title,
pre .section,
pre .attribute,
pre .quote,
pre .built_in,
pre .builtin-name {
  color: #ffa;
}

pre .number,
pre .symbol,
pre .bullet {
  color: #d36363;
}

pre .keyword,
pre .selector-tag,
pre .literal {
  color: #fcc28c;
}

pre .comment,
pre .deletion,
pre .code {
  color: #888;
}

pre .regexp,
pre .link {
  color: #c6b4f0;
}

pre .meta {
  color: #fc9b9b;
}

pre .deletion {
  background-color: #fc9b9b;
  color: #333;
}

pre .addition {
  background-color: #a2fca2;
  color: #333;
}

pre a {
  color: inherit;
}

pre a:focus,
pre a:hover {
  color: inherit;
  text-decoration: underline;
}

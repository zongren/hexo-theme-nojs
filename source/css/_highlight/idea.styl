pre {
  display: block;
  overflow-x: auto;
  padding 10px content-padding;
  color: #000;
  background: #fff;
}

pre .subst,
pre .title {
  font-weight: normal;
  color: #000;
}

pre .comment,
pre .quote {
  color: #808080;
  font-style: italic;
}

pre .meta {
  color: #808000;
}

pre .tag {
  background: #efefef;
}

pre .section,
pre .name,
pre .literal,
pre .keyword,
pre .selector-tag,
pre .type,
pre .selector-id,
pre .selector-class {
  font-weight: bold;
  color: #000080;
}

pre .attribute,
pre .number,
pre .regexp,
pre .link {
  font-weight: bold;
  color: #0000ff;
}

pre .number,
pre .regexp,
pre .link {
  font-weight: normal;
}

pre .string {
  color: #008000;
  font-weight: bold;
}

pre .symbol,
pre .bullet,
pre .formula {
  color: #000;
  background: #d0eded;
  font-style: italic;
}

pre .doctag {
  text-decoration: underline;
}

pre .variable,
pre .template-variable {
  color: #660e7a;
}

pre .addition {
  background: #baeeba;
}

pre .deletion {
  background: #ffc8bd;
}

pre .emphasis {
  font-style: italic;
}

pre .strong {
  font-weight: bold;
}

pre {
  display: block;
  background: white;
  padding 10px content-padding;
  color: #333333;
  overflow-x: auto;
}

pre .comment,
pre .meta {
  color: #969896;
}

pre .string,
pre .variable,
pre .template-variable,
pre .strong,
pre .emphasis,
pre .quote {
  color: #df5000;
}

pre .keyword,
pre .selector-tag,
pre .type {
  color: #a71d5d;
}

pre .literal,
pre .symbol,
pre .bullet,
pre .attribute {
  color: #0086b3;
}

pre .section,
pre .name {
  color: #63a35c;
}

pre .tag {
  color: #333333;
}

pre .title,
pre .attr,
pre .selector-id,
pre .selector-class,
pre .selector-attr,
pre .selector-pseudo {
  color: #795da3;
}

pre .addition {
  color: #55a532;
  background-color: #eaffea;
}

pre .deletion {
  color: #bd2c00;
  background-color: #ffecec;
}

pre .link {
  text-decoration: underline;
}

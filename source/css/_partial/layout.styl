*
  margin-top 0
  margin-left 0
  margin-bottom 0
  margin-right 0
  padding-top 0
  padding-left 0
  padding-bottom 0
  padding-right 0
  -moz-box-sizing content-box
  -webkit-box-sizing content-box
  -o-box-sizing content-box
  -ms-box-sizing content-box
  box-sizing content-box

html,body
  height 100%

body
  background-color background-color
  color text-color
  font-family font-default
  margin-left auto
  margin-right auto
  max-width content-width
  font-size 16px

h1
  font-size 24px

h2
  font-size 18px

h3
  font-size 16px

h4
  font-size 14px

h5
  font-size 12px

h6
  font-size 10px

a
  color primary-color
  text-decoration none
  &:hover
    text-decoration underline

.light
  color lighten(primary-color,50%)

#content
  min-height 100%
  height: auto !important;
  height 100%
  margin-bottom - footer-height
  .push
    height footer-height
    
<% 
var step = 2;
var max = 10;
var items = site.tags.sort('name');
%>
<section class="content-item archive tags">
  <h3><%= _p('tagCount',items.length) %></h3>
  <ul class="archive-list">
  <% items.each(function(item){ 
    var length = item.posts.length;
    var level = Math.ceil(length / step);
    if(level > max){
      level = max;
    }
    %>
  <li class="archive-list-item">
  <a class="archive-list-link" href="<%= url_for(item.path) %>" class="level-<%= level %>"><%= item.name %>(<%= item.posts.length %>)</a></li>
  <% }); %>
  </ul>
</section>
#pagination
  width 100%
  height 50px
  line-height 50px
  box-sizing border-box
  position relative
  .left
    width 50%
    text-align left
    position absolute
  .right
    width 50%
    text-align right
    position absolute
    right 0
  .all
    width 100%
  a
    padding-top 2px
    padding-left 3px
    padding-right 3px
    padding-bottom 2px
    text-decoration none
    &:hover
      background-color primary-color
      color #fff
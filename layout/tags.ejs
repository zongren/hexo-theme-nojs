<% 
var step = 2;
var max = 10;
var items = site.tags.sort('name');
%>
<section class="content__item content__item--tags">
  <ul class="content__list">
  <% items.each(function(item){ 
    var length = item.posts.length;
    var level = Math.ceil(length / step);
    if(level > max){
      level = max;
    }
    %>
  <li class="content__list-item content__list-item--tags">
  <a class="content__list-link" href="<%= url_for(item.path) %>" class="level-<%= level %>"><%= item.name %>(<%= item.posts.length %>)</a></li>
  <% }); %>
  </ul>
</section>
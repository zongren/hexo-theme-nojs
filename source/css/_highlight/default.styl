pre {
  display: block;
  overflow-x: auto;
  padding 10px content-padding;
  background: #F0F0F0;
}


/* Base color: saturation 0; */

pre,
pre .subst {
  color: #444;
}

pre .comment {
  color: #888888;
}

pre .keyword,
pre .attribute,
pre .selector-tag,
pre .meta-keyword,
pre .doctag,
pre .name {
  font-weight: bold;
}


/* User color: hue: 0 */

pre .type,
pre .string,
pre .number,
pre .selector-id,
pre .selector-class,
pre .quote,
pre .template-tag,
pre .deletion {
  color: #880000;
}

pre .title,
pre .section {
  color: #880000;
  font-weight: bold;
}

pre .regexp,
pre .symbol,
pre .variable,
pre .template-variable,
pre .link,
pre .selector-attr,
pre .selector-pseudo {
  color: #BC6060;
}


/* Language color: hue: 90; */

pre .literal {
  color: #78A960;
}

pre .built_in,
pre .bullet,
pre .code,
pre .addition {
  color: #397300;
}


/* Meta color: hue: 200 */

pre .meta {
  color: #1f7199;
}

pre .meta-string {
  color: #4d99bf;
}


/* Misc effects */

pre .emphasis {
  font-style: italic;
}

pre .strong {
  font-weight: bold;
}

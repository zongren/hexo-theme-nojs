@import 'font-config'

@font-face {
  font-family: 'zongren';
  src: url('/fonts/'+$font_name+'.eot');
  src:
    url('/fonts/'+$font_name+'.eot?#font-spider') format('embedded-opentype'),
    url('/fonts/'+$font_name+'.woff') format('woff'),
    url('/fonts/'+$font_name+'.ttf') format('truetype'),
    url('/fonts/'+$font_name+'.svg') format('svg');
  font-weight: bold;
  font-style: normal;
}

html,body {
    font-family: 'zongren';
}
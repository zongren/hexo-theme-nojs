#cd-top
  width 100%
  max-width content-width + footer-height * 0.5
  height footer-height
  line-height footer-height
  position fixed
  bottom 0
  text-align right
  pointer-events none
  a
    pointer-events auto
    width footer-height * 0.5
    display inline-block
    height footer-height * 0.5
    line-height footer-height * 0.5
    text-align center
    text-decoration none
    position absolute
    right 0
    &:hover
      background-color primary-color
      color #fff
  a.to-top 
    top 0
  a.to-bottom
    bottom 0